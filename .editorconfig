root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = false
max_line_length = 120
tab_width = 4


[*.csv]
max_line_length = 2147483647


[{*.bash,*.sh,*.zsh}]
indent_size = 2
tab_width = 2

[LICENSE]
insert_final_newline = false

[*.bat]
indent_style = tab
end_of_line = crlf

[Makefile]
indent_style = tab

[{*.har,*.jsb2,*.jsb3,*.json,.babelrc,.eslintrc,.stylelintrc,bowerrc,jest.config}]
indent_size = 2


[{*.r,*.rprofile}]
indent_size = 2
